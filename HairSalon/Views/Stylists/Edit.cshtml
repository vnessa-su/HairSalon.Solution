@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>@Html.DisplayFor(model => model.Name)</h1>
<hr/>

<div class="page-content container">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.StylistId)
    <div class="form-group form-inline">
        @Html.LabelFor(model => model.Name, new{@class = "col-sm-4 col-form-label"})
        @Html.TextBoxFor(model => model.Name, new {@class = "form-control", required="required"})
      </div>
      <div class="form-group form-inline">
        @Html.LabelFor(model => model.PhoneNumber, new{@class = "col-sm-4 col-form-label"})
        @Html.TextBoxFor(model => model.PhoneNumber, new {@class = "form-control", required="required"})
      </div>
      <div class="form-group form-inline">
        @Html.LabelFor(model => model.Email, new{@class = "col-sm-4 col-form-label"})
        @Html.TextBoxFor(model => model.Email, new {@class = "form-control", required="required"})
      </div>
      <div class="form-group form-inline">
        @Html.LabelFor(model => model.Address, new{@class = "col-sm-4 col-form-label"})
        @Html.TextBoxFor(model => model.Address, new {@class = "form-control", required="required"})
      </div>
      <div class="form-group form-inline">
        @Html.LabelFor(model => model.StylistLevel, new{@class = "col-sm-4 col-form-label"})
        @Html.DropDownList("StylistLevel", null, new {@class = "form-control"})
      </div>
      <div class="text-center">
        <input type="submit" value="Save" class="btn btn-primary btn-lg my-2"/>
      </div>
  }
</div>

<div class="text-center m-5">
  @Html.ActionLink("Home", "Index", "Home", null, new {@class = "btn btn-secondary btn-lg mx-2 my-1"})

  @Html.ActionLink("List of Stylists", "Index", "Stylists", null, new {@class = "btn btn-secondary btn-lg mx-2 my-1"})
  @Html.ActionLink("Add Stylist", "Create", "Stylists", null, new {@class = "btn btn-secondary btn-lg mx-2 my-1"})

  @Html.ActionLink("List of Clients", "Index", "Clients", null, new {@class = "btn btn-secondary btn-lg mx-2 my-1"})
  @Html.ActionLink("Add Client", "Create", "Clients", null, new {@class = "btn btn-secondary btn-lg mx-2 my-1"})
</div>